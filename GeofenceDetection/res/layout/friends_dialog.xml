<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/friends_listView_friendsDialog" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:choiceMode="multipleChoice" android:layout_above="@+id/cancel_button_friendsdialog"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_button_friendsdialog"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/confirm_button_friendsdialog"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>